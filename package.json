{
  "name": "lumi-web-core",
  "description": "Lumi Wallet Core - Web Version",
  "version": "1.6.0",
  "author": {
    "name": "vikowl",
    "email": "vd@lumiwallet.com"
  },
  "main": "dist/index.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lumiwallet/lumi-web-core"
  },
  "homepage": "https://github.com/lumiwallet/lumi-web-core",
  "keywords": [
    "lumi",
    "crypto",
    "wallet",
    "client-side",
    "web",
    "app"
  ],
  "bugs": {
    "url": "https://github.com/lumiwallet/lumi-web-core/issues"
  },
  "dependencies": {
    "@babel/runtime": "^7.11.2",
    "bchaddrjs": "^0.4.9",
    "bip39": "^3.0.2",
    "bip39-checker": "^1.1.7",
    "bitcoinjs-lib": "^5.2.0",
    "bitcore-lib-cash": "=8.22.1",
    "coininfo": "^5.1.0",
    "ethereumjs-tx": "^2.1.2",
    "ethereumjs-util": "^6.2.1",
    "hdkey": "^1.1.2",
    "web3-utils": "^1.2.11",
    "wif": "^2.0.6",
    "worker-loader": "^3.0.8"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "babel-jest": "^26.5.2",
    "babel-loader": "^8.1.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "commitizen": "^4.2.1",
    "cz-conventional-changelog": "^3.2.0",
    "esdoc": "^1.0.4",
    "esdoc-ecmascript-proposal-plugin": "^1.0.0",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-sonarjs": "^0.5.0",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^26.5.2",
    "jest-fetch-mock": "^3.0.3",
    "randombytes": "^2.1.0",
    "webpack": "^4.44.1"
  },
  "engines": {
    "node": ">= 10.19.0"
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "lint": "eslint --ext .js --ignore-path .gitignore .",
    "precommit": "npm run lint",
    "commit": "git-cz",
    "prepare": "npm run build",
    "build": "npm run clean && babel src --out-dir dist",
    "test": "jest --updateSnapshot",
    "test:coverage": "npm run test -- --coverage --watchAll=false",
    "preversion": "npm run test && npm run doc",
    "version": "npm run clean && npm run build",
    "postversion": "git add . && git push && git push --tags",
    "doc": "esdoc -c ./.esdoc"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "roots": [
      "<rootDir>/__tests__"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "\\.worker.js": "<rootDir>/__mocks__/workerMock.js"
    },
    "collectCoverage": true,
    "coverageReporters": [
      "html"
    ]
  }
}
